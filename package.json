{
	"name": "juicebox-ai",
	"productName": "Juicebox AI",
	"private": true,
	"version": "0.0.1",
	"description": "A local AI juicing application",
	"author": "Denis Duvauchelle <desduvauchelle@gmail.com>",
	"type": "module",
	"main": "public/electron.cjs",
	"license": "MIT",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"typecheck": "tsc --noEmit",
		"preview": "vite preview",
		"electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .\"",
		"start": "cp public/preload.cjs dist/ && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .\"",
		"package": "npm run build && electron-forge package",
		"make": "npm run build && electron-forge make",
		"make-icon": "electron-icon-maker --input=public/logo.png --output=public/icons"
	},
	"build": {
		"appId": "com.ai-juicing.juicebox",
		"productName": "Juicebox AI",
		"publish": {
			"provider": "github",
			"owner": "desduvauchelle",
			"repo": "ai-juicing-juicebox",
			"private": false
		},
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg",
				"zip"
			]
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			]
		},
		"files": [
			"dist/**/*",
			"public/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "package"
		}
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/modifiers": "^9.0.0",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@fortawesome/fontawesome-svg-core": "^6.7.2",
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@fortawesome/react-fontawesome": "^0.2.2",
		"@tailwindcss/vite": "^4.0.0",
		"cheerio": "^1.0.0",
		"date-fns": "^4.1.0",
		"electron-squirrel-startup": "^1.0.1",
		"electron-updater": "^6.3.9",
		"jsdom": "^26.0.0",
		"react": "^18.3.1",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^18.3.1",
		"react-markdown": "^9.0.3",
		"react-router-dom": "^7.1.3",
		"react-textarea-autosize": "^8.5.7",
		"systeminformation": "^5.25.11",
		"tailwindcss": "^4.0.0"
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.6.1",
		"@electron-forge/maker-deb": "^7.6.1",
		"@electron-forge/maker-dmg": "^7.6.1",
		"@electron-forge/maker-rpm": "^7.6.1",
		"@electron-forge/maker-squirrel": "^7.6.1",
		"@electron-forge/maker-zip": "^7.6.1",
		"@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
		"@electron-forge/plugin-fuses": "^7.6.1",
		"@electron/fuses": "^1.8.0",
		"@eslint/js": "^9.17.0",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^9.1.2",
		"daisyui": "^4.12.23",
		"electron": "^34.0.1",
		"electron-icon-maker": "^0.0.5",
		"eslint": "^9.17.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.16",
		"globals": "^15.14.0",
		"typescript": "~5.6.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^6.0.5",
		"wait-on": "^8.0.2"
	}
}
